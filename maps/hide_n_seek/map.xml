</teams>
<kits>
    <kit id="blindness">
        <effect>blindness</effect>
    </kit>
    <kit id="seeker-kit" force="true">
        <game-mode>adventure</game-mode>
        <item slot="0" locked="true" unbreakable="true" material="iron sword"/>
